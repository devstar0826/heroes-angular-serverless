{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Node Server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "node-debug"],
      "port": 9229
    },
    {
      "name": "Attach to Node Functions",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "preLaunchTask": "func: host start"
    },
    {
      "name": "Launch Angular",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}"
    },
    {
      // Debug whichever file is open and focused
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "name": "Launch Relative File",
      "args": ["${relativeFile}"]
    }
  ],
  "compounds": [
    {
      "name": "Launch Angular & Functions",
      "configurations": ["Attach to Node Functions", "Launch Angular"]
    },

    {
      "name": "Launch Angular and Node",
      "configurations": ["Launch Node Server", "Launch Angular"]
    }
  ]
}
